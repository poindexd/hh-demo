mixin dot(title, date, icon)
	li.collection-item.avatar.hoverable
		.circle.bg&attributes(attributes)
		i.material-icons.circle&attributes(attributes)= icon
		div(style='position:relative;z-index:50;')
			span.title= title
			br
			label= date


