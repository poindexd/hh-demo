		style.

			.hoverable:hover {
				transition: box-shadow .25s;
				box-shadow: 0 4px 4px 0 rgba(0, 0, 0, 0.2);
			}

			.scores .col{
					border-left: 4px solid #ececec;
					border-bottom: 4px solid #ececec;
					padding: 35px 10px;
			}

			.scores::nth-child(1){
				border-left:none;
			}

			.collection{
				overflow: visible;
			}
			.collection-item{
				cursor: pointer;
				overflow: hidden;
				backface-visibility: hidden;
				transition: box-shadow .25s;
				box-shadow: none;

			}
			.collection{
			border: none;
			}
			.collection .collection-item{
				border-bottom: none;
				margin-bottom: 4px;
			}
			.collection-item:hover, .collection-item.selected{
				transition-duration: 0.25s;
				transform: scale(1.1) translateZ(0);
				z-index: 5000;
				//border: none;
			}
			.collection-item.selected .bg{
				transition-duration: 0.25s;
				-webkit-transition-timing-function: ease-in; /* Safari and Chrome */
				transition-timing-function: ease-in;
				transform: scale(25);
			}
			.collection-item.selected i{
				transform: scale(2);
			}
			.collection-item.selected, .collection-item.selected label{
				color: white;
			}
			.collection-item.selected{
				transition: box-shadow .25s;
				box-shadow: 0 4px 4px 0 rgba(0, 0, 0, 0.2);
			}

			.collection-panel{
				margin: 0.5rem 0 1rem 0;
				border-radius: 2px;
				overflow: hidden;
				position: relative;
				background-color: white;
				padding: 10px 20px;
			}

			.collection-panel-item{
				float: left;
				padding: 20px;
				width: 15%;
				background-color: white;
				margin-right: 4px;
				margin-bottom: 4px;
				display: inline-block;
			}

			.scores .chip{
				display: block;
				border: 4px solid transparent;
				background-color: #fff;
				font-size: 20px;
				height: 44px;
				line-height: 38px;
				padding: 0 24px;
				border-radius: 22px;
				transition: all 0.2s ease;
				cursor: pointer;
			}
			.scores .chip.low{
				color: #4CAF50 !important;
			}
			.scores .chip.med{
				color: #ffc107 !important;			
			}
			.scores .chip.high{
				color: #F44336 !important;
			}

			.scores .chip.low:hover{
				border: 4px solid #4CAF50;
			}
			.scores .chip.low.selected{
				background-color: #4CAF50 !important;
				color: white !important;
			}
			.scores .chip.med:hover{
				border: 4px solid #ffc107;
			}
			.scores .chip.med.selected{
				background-color: #ffc107 !important;
				color: white !important;
			}
			.scores .chip.high:hover{
				border: 4px solid #F44336;
			}
			.scores .chip.high.selected{
				background-color: #F44336 !important;
				color: white !important;
			}
			.card-sticky{
				display: inline-block;
				vertical-align: middle;
				width: 275px;
				margin-right: 20px;
				height: 200px;
				background: #efec96;
				background: radial-gradient(#f4f1b2, #eae672);
				text-align: left;
				padding: 0rem 2rem;
			}
			.card-sticky p {
				color: black;
				font-size: 20px;

			}
			::-webkit-scrollbar {
				width: 6px;
			}

			/* Track */
			::-webkit-scrollbar-track {
				-webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3); 
				-webkit-border-radius: 10px;
				border-radius: 10px;
			}

			/* Handle */
			::-webkit-scrollbar-thumb {
				-webkit-border-radius: 10px;
				border-radius: 10px;
				background: #cccccc; 
				-webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.5); 
			}
			::-webkit-scrollbar-thumb:window-inactive {
				background: #cccccc; 
			}
			p{
					color: black;
					padding-left: 15px;
			}
